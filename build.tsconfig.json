{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "sourceMap": false,
    "inlineSourceMap": false,
    "noEmit": false,
    "strict": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "consts/*": [
        "./src/consts/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "errors/*": [
        "./src/errors/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "commands/*": [
        "./src/commands/*"
      ],
      "commands-base/*": [
        "./src/commands-base/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "exclude": [
    "test",
    "node_modules",
    "bin",
    "dist",
    "./**/*/__tests__"
  ]
}
