{
  "compilerOptions": {
    "types": ["node", "jest"],
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "test/*": [
        "./test/*"
      ],
      "consts/*": [
        "./src/consts/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "errors/*": [
        "./src/errors/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "commands/*": [
        "./src/commands/*"
      ],
      "commands-base/*": [
        "./src/commands-base/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules",
    "bin",
    "dist"
  ]
}
