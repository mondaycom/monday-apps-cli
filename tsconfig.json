{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "consts/*": [
        "./src/consts/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "errors/*": [
        "./src/errors/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "commands/*": [
        "./src/commands/*"
      ],
      "commands-base/*": [
        "./src/commands-base/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "dist",
    "__tests__"
  ]
}
