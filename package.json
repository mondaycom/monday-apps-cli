{
  "name": "@mondaycom/apps-cli",
  "version": "1.3.4",
  "description": "A cli tool to manage apps (and monday-code projects) in monday.com",
  "author": "monday.com Apps Team",
  "type": "module",
  "bin": {
    "mapps": "./bin/run.js"
  },
  "homepage": "https://github.com/mondaycom/monday-code-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "mondaycom/monday-code-cli",
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json",
    "README.md"
  ],
  "scripts": {
    "start": "./bin/run.js",
    "dev": "./bin/dev.js",
    "build": "shx rm -rf dist && tsc -b && tsc-alias -f -p tsconfig.json",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint:fix": "npm run lint -- --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "test": "jest",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md",
    "prettier:check": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "prepublish-and-build": "yarn install --frozen-lockfile && yarn prepack && ./scripts/create-minified-package-json.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": "https://github.com/mondaycom/monday-code-cli/issues",
  "keywords": [
    "monday.com",
    "monday",
    "monday-code",
    "oclif",
    "cli"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@oclif/core": "^2.8.5",
    "@oclif/plugin-autocomplete": "^2.2.0",
    "@oclif/plugin-help": "^5.2.9",
    "archiver": "^5.3.1",
    "args-parser": "^1.3.0",
    "axios": "^1.2.1",
    "axios-retry": "^3.8.0",
    "call-bind": "^1.0.2",
    "chalk": "4.1.2",
    "enquirer": "^2.3.6",
    "figlet": "^1.5.2",
    "fuzzy": "^0.1.3",
    "glob": "^8.1.0",
    "http-status-codes": "^2.2.0",
    "inquirer": "^9.1.4",
    "inquirer-autocomplete-prompt": "^3.0.0",
    "inquirer-date-prompt": "^3.0.0",
    "isemail": "^3.2.0",
    "listr2": "^6.6.0",
    "nanospinner": "^1.1.0",
    "parse-gitignore": "^2.0.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "pusher-js": "^8.0.1",
    "update-notifier": "^6.0.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.21",
    "@types/archiver": "^5.3.1",
    "@types/chai": "^4.3.5",
    "@types/figlet": "^1.5.5",
    "@types/glob": "^8.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/inquirer-autocomplete-prompt": "^3.0.0",
    "@types/jest": "^29.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "@types/parse-gitignore": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "oclif": "^3.9.1",
    "prettier": "^3.0.0",
    "shx": "^0.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.6",
    "tslib": "^2.4.1",
    "tsx": "^3.12.7",
    "typescript": "^4.9.3"
  },
  "oclif": {
    "bin": "mapps",
    "dirname": "mapps",
    "flexibleTaxonomy": true,
    "commands": "./dist/commands",
    "macos": {
      "identifier": "com.monday.apps.cli"
    },
    "topics": {
      "code": {
        "description": "Perform operations related to apps in monday-code, monday.com's server hosting service"
      },
      "app": {
        "description": "Perform operations related to apps in monday.com"
      },
      "app-version": {
        "description": "Perform operations related to app versions in monday.com"
      }
    },
    "hooks": {
      "init": "./dist/hooks/init",
      "command_incomplete": "./dist/hooks/command-incomplete"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ]
  }
}
